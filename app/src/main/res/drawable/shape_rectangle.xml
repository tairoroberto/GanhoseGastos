<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
	<!--
	<solid android:color="#f00" />
	-->
	
	<gradient
		android:type="linear"
		android:angle="45"
		android:centerX="75%"
		android:centerY="75%"
		android:startColor="#f00"
		android:centerColor="#fff"
		android:endColor="#f0f" />
	
	<stroke
		android:width="@dimen/global_metric_micro"
		android:dashWidth="@dimen/global_metric_micro"
		android:dashGap="@dimen/global_metric_micro"
		android:color="#f00" />
	
	<corners
		android:topLeftRadius="@dimen/global_metric_medium"
		android:topRightRadius="@dimen/global_metric_medium"
		android:bottomLeftRadius="@dimen/global_metric_medium"
		android:bottomRightRadius="@dimen/global_metric_medium" />
	
	<padding
		android:bottom="0dp"
		android:left="0dp"
		android:right="0dp"
		android:top="0dp" />
</shape>
