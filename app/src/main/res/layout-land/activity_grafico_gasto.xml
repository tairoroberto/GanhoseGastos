<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="br.com.trmasolucoes.ganhosegastos.graficos.GraficoGanhosActivity">


    <view
        android:layout_width="wrap_content"
        android:layout_height="239dp"
        class="com.github.mikephil.charting.charts.BarChart"
        android:id="@+id/graphGastos"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

    <view
        android:layout_width="0dp"
        android:layout_height="match_parent"
        class="com.github.mikephil.charting.charts.PieChart"
        android:id="@+id/graphGastosPie"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"
        android:layout_weight="2.8" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/txtMesGraficoGastos"
            android:gravity="center_horizontal"
            android:textSize="32sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/txtValorMesGraficoGasto"
            android:gravity="center_horizontal"
            android:textSize="28sp"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</LinearLayout>
