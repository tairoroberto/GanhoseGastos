<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <!-- Action-bar looking view -->
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/actionbar_dimen"
      android:background="@color/dark_gray"
      >

    <ImageView
        android:id="@+id/drawer_indicator"
        android:layout_width="@dimen/actionbar_dimen"
        android:layout_height="@dimen/actionbar_dimen"
        android:scaleType="centerInside"
        android:background="@drawable/drawer_selector"
        android:layout_gravity="start"
        />


      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="340dp"
          android:layout_height="match_parent"
          android:layout_gravity="center_vertical|right">

          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1">

              <View
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1.1"
                  android:background="@drawable/botao_tranparente"
                  android:layout_gravity="center_vertical"/>


              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:id="@+id/btnCancelarGastos"
                  android:background="@drawable/botao_tranparente">

                  <ImageView
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:layout_gravity="center"
                      android:layout_marginLeft="10dp"
                      android:src="@mipmap/ic_action_cancel_dark"/>

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="2"
                      android:text="CANCELAR"
                      android:layout_gravity="center_vertical"
                      android:textColor="@color/light_gray"
                      android:paddingLeft="2dp"
                      android:layout_marginRight="15dp" />
               </LinearLayout>


          </LinearLayout>


          <View
              android:layout_width="1dp"
              android:layout_height="30dp"
              android:background="@color/light_gray"
              android:layout_gravity="center_vertical"/>

          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="0.6"
              android:id="@+id/btnSalvarGastos"
              android:background="@drawable/botao_tranparente">

              <View
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="0.5"
                  android:background="@drawable/botao_tranparente"
                  android:layout_gravity="center_vertical"/>

              <ImageView
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:layout_gravity="center"
                  android:src="@mipmap/ic_action_accept"/>

              <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="2"
                  android:text="SALVAR"
                  android:layout_gravity="center_vertical"
                  android:textColor="@color/light_gray"
                  android:paddingLeft="2dp"/>

          </LinearLayout>

      </LinearLayout>

  </FrameLayout>

  <!-- Content -->

    <android.support.v4.widget.DrawerLayout
      android:id="@+id/drawer_layout"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="R$0,00"
                    android:id="@+id/txtValorGasto"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dark_gray"
                    android:layout_alignBottom="@id/txtValorGasto"/>

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/listaCategorias"
                    android:layout_gravity="center_horizontal"
                    android:choiceMode="singleChoice"
                    android:layout_below="@+id/txtValorGasto"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_above="@+id/textView3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalhes"
                    android:textSize="20sp"
                    android:id="@+id/textView3"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:layout_above="@+id/btnDataVencimentoGasto"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dark_gray"
                    android:layout_alignBottom="@id/textView3"
                    android:id="@+id/view" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/edtComentarioGasto"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="10dp"
                    android:inputType="text" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vencimento"
                    android:background="@drawable/botao_tranparente"
                    android:id="@+id/btnDataVencimentoGasto"
                    android:layout_above="@+id/btnFormaPagamento"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center|start"
                    android:layout_toStartOf="@+id/edtComentarioGasto"
                    android:layout_toLeftOf="@+id/edtComentarioGasto" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descrição"
                    android:id="@+id/textView5"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="10dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forma de pagamento"
                    android:background="@drawable/botao_tranparente"
                    android:id="@+id/btnFormaPagamento"
                    android:gravity="center|right"
                    android:layout_above="@+id/edtComentarioGasto"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="10dp"
                    android:layout_alignLeft="@+id/edtComentarioGasto"
                    android:layout_alignStart="@+id/edtComentarioGasto" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkDataPagamentoGasto"
                    android:checked="false"
                    android:layout_alignBottom="@+id/btnDataVencimentoGasto"
                    android:text="Data de pagamento"
                    android:layout_alignTop="@+id/btnDataVencimentoGasto"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />


            </RelativeLayout>


        </LinearLayout>




        <ListView
            android:id="@+id/drawer_content"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:background="#F8F8FF"/>


  </android.support.v4.widget.DrawerLayout>

</LinearLayout>
