<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:AwesomeTextView="http://schemas.android.com/apk/res-auto"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:bootstrapthumbnail="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="horizontal"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:padding="10dp">



    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:id="@+id/imageIcone"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        app:fontAwesomeIcon="fa-check"
        android:layout_gravity="center_vertical"
        android:textSize="24sp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/txtTitleOpcao"
        android:text="Large Text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="@color/dark_gray"/>

</LinearLayout>
</LinearLayout>
